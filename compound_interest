import java.util.Scanner;

class Compound_Interest 
{
	Scanner input=new Scanner(System.in);
		float principal=0;
		float rate=0;
		int time=0;
	float calculate_intrest()
	{
		float intrest=0;
		/*
		 * ENTER AMOUNT
		 * */
		principal=input.nextFloat();
		/*
		 * ENTER RATE
		 * */
		rate=input.nextFloat();
		/*
		 * ENTER TIME IN YEARS
		 * */
		time=input.nextInt();	
		for(int i=0;i<time;i++)
		{
			intrest=(principal*rate)/100;
			principal+=intrest;
		}
		

		return principal;
	}
}
public class InterestCal
{
	public static void main(String args[])
	{
		Compound_Interest i=new Compound_Interest();
		i.calculate_intrest();
	}
}
